#%Module########################################################################
##
## CUDA modulefile
##
proc ModulesHelp { } {
        global version
        puts stderr "\tSets up environment for CUDA v$version,"
}

module-whatis   "sets up environment for CUDA 12.2"

# variables
set     version 12.2

prepend-path	PATH		  /usr/local/cuda-12.2/bin
prepend-path	LD_LIBRARY_PATH	  /usr/local/cuda-12.2/lib64
